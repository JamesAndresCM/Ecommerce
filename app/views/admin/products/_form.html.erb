
<%= simple_form_for(@product, url: url) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :pricing %>
    <%= f.input :description %>
    <div class="card mt-2 mb-2">
      <div class="card-body row"">
        <div class="center">
          <%= @product.decorate.img_product %>
        </div>
        </div>
      <div class="custom-file mb-3 upload-img" id="customFile" lang="es">
        <%= f.file_field :img, class:'form-control custom-file-input', id: 'product-upload' %>
          <label class="mb-2 custom-file-label">
            Imagen
          </label>
          </div>
        <%= f.hidden_field :img_cache %>
      </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit,class:'btn btn-primary btn-block' %>
  </div>
<% end %>
