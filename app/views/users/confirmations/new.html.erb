<div class="card col-lg-6 mt-4" style="margin: 0 auto">
  <h2 class="login-style">Resend confirmation instructions</h2>
    <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      <%= f.button :submit, "Resend confirmation instructions" , class: 'btn btn-primary'%>
    <% end %>
    </div>
  <%= render "users/shared/links" %><br>
</div>