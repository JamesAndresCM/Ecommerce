<div class="card col-lg-6 mt-4" style="margin: 0 auto">
  <div class="card-body" style="border-radius: 5px;">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <div class="row mb-2">
      <div>
        <%= image_tag(current_user.avatar.url,  id: 'img_prev', class:"img-fluid mt-2 avatar_profile") %><br/>
      </div>
      <div class="col-lg-8 custom-file mt-5 ml-2" id="customFile" lang="es">
        <%= f.file_field :avatar, class:'form-control custom-file-input', id: 'avatar-upload' %>
          <label class="mt-2 custom-file-label">
           Avatar
          </label>
      </div>
      <%= f.hidden_field :avatar_cache %>
    </div>
    <br>
    <%= f.input :username,disabled: true, hint: 'You cannot change your username.' %>
    <%= f.input :email, required: true %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>

    <%= f.button :submit, "Update Account" , class: 'btn-block btn btn-success'%>
  <% end %>
  </div>
</div>
